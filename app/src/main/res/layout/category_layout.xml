<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/play_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/stop_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停止播放" />
            <Button
                android:id="@+id/pause_play"
                android:text="暂停播放"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/start_play"
                android:text="开始播放"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/destroy_service"
                android:text="销毁服务"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>



        <Button
            android:id="@+id/btn_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动画" />



        <Button
            android:id="@+id/to_recycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RecyclerActivity" />

        <Button
            android:id="@+id/to_self"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SelfActivity" />

        <TextView
            android:id="@+id/show_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/to_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试页面" />

        <Button
            android:id="@+id/to_self_recycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RecyclerActivity" />


        <Button
            android:id="@+id/to_edit_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="to_line" />

        <Button
            android:id="@+id/to_broadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BroadCast" />

        <Button
            android:id="@+id/to_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="语音听写" />

        <Button
            android:id="@+id/to_voice_wakeup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wake Up" />

        <Button
            android:id="@+id/to_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification" />
        <Button
            android:id="@+id/to_hecheng"
            android:text="合成
"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/to_gps"
            android:text="GPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/to_intent"
            android:text="Intent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/to_bluetooth"
            android:text="蓝牙"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>

</ScrollView>